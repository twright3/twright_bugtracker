
<div class="customContentPanel">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Roles", htmlAttributes: new { @class = "control-lable col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("Roles", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

        </div>

    }

</div>

