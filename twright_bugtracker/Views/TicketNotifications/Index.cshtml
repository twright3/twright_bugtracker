@model IEnumerable<twright_bugtracker.Models.TicketNotification>

@{
    ViewBag.Title = "Index";
}

<div class="customContentPanel">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="title">Ticket Notifications</h5>
                </div>

                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table id="datatable" class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Ticket.OwnerUserId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.User.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NotificationBody)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tobody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ticket.OwnerUserId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NotificationBody)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                                    @Html.ActionLink("Mark as Read", "MarkAsRead", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tobody>
                </table>
            </div>
        </div>
    </div>
</div>
